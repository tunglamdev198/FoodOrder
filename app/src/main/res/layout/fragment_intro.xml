<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_intro"
            android:src="@drawable/ic_fast_delivery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/img_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/food_welcome"
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Vận chuyển nhanh chóng"
            android:textAllCaps="true"
            android:textSize="@dimen/_14ssp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:text="Vận chuyển nhanh chóng Vận chuyển nhanh chóng Vận chuyển nhanh chóng"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"/>

    </LinearLayout>

</LinearLayout>
</layout>